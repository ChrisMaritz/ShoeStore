<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ShoeListFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AA939D">

<!--        a scrollview was put here as it was instructed -->

        <ScrollView
            android:id="@+id/shoe_list_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

<!--            a linear layout seemed like the best way to contain all the text i needed-->

            <LinearLayout
                android:id="@+id/linear_layout_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/populate_this"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="16dp"
                    android:textAlignment="center"
                    tools:text="First\nSecond\nSecond\nSecond\nSecond\nSecond\nSecond\nSecond\nSecond\nSecond\nSecond\nSecond\nSecond\nSecond" />

            </LinearLayout>
        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:clickable="true"
            android:src="@drawable/ic_add"
            app:backgroundTint="#E15793"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/back_to_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="16dp"
            android:backgroundTint="#E15793"
            android:text="@string/back_to_login" />
    </FrameLayout>
</layout>